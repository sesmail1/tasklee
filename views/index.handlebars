<div class="container">
    {{!-- {{#each data}} {{this.task}} {{this.description}} {{/each}} --}}

    <!-- Trigger the modal with a button -->
    <button type="button" class="taskapp btn btn-success" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-plus"></span> Create Task</button>

    <!-- Modal -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Create a New Task</h4>
                </div>
                <div class="modal-body">

                    <form method="post" action="/">
                        <div class="form-group">
                            <label>Task</label>
                            <input type="text" class="form-control" name="task" placeholder="Task Name">
                        </div>
                        <div class="form-group">
                            <label>Description</label>
                            <textarea class="form-control" rows="3" name="description" placeholder="Description of Task"></textarea>
                        </div>
                        <button type="submit" class="btn btn-success"><span class="glyphicon glyphicon-plus"></span> Create Task</button>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>
                </div>
            </div>

        </div>
    </div>
    <br><br>
    <table class="table">
        <thead>
            <tr>
                <th>Task</th>
                <th>Description</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            {{#each data}}
            <tr>
                <td>{{this.task}}</td>
                <td>{{this.description}}</td>
                <td>
                    <button type="button" class="btn btn-default" data-toggle="modal" data-target="#{{this.taskID}}"><span class="glyphicon glyphicon-pencil"></span> Edit</button>
                    <div class="modal fade" id="{{this.taskID}}" role="dialog">
                        <div class="modal-dialog">
                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">Update Task</h4>
                                </div>
                                <div class="modal-body">

                                    <form method="post" action="/update">
                                        <div class="form-group">
                                            <label>Task</label>
                                            <input type="text" class="form-control" name="task" placeholder="{{this.task}}">
                                        </div>
                                        <div class="form-group">
                                            <label>Description</label>
                                            <textarea class="form-control" rows="3" name="description" placeholder="{{this.description}}"></textarea>
                                        </div>
                                        <input type="hidden" name="taskID" value={{this.taskID}}>
                                        <button type="submit" class="btn btn-warning"><span class="glyphicon glyphicon-floppy-disk"></span> Save</button>
                                    </form>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-danger" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </td>
                <form method="post" action="/delete">
                    <input type="hidden" name="id" value={{this.taskID}}>
                    <td><button class="btn btn-danger" type="submit"><span class="glyphicon glyphicon-fire"></span> Delete</button></td>
                </form>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>